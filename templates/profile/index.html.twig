{% extends 'base.html.twig' %}

{% block title %}Mon Profil - {{ parent() }}{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5">
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <h5 class="my-3">{{ user.email }}</h5>
                            <p class="text-muted mb-1">Membre depuis {{ user.createdAt|date('d M Y') }}</p>
                            <div class="d-flex justify-content-center mb-2">
                                <button type="button" class="btn btn-outline-primary">Modifier le profil</button>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>
{% endblock %}